<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.DetailsFragment"
        android:background="@color/mainback"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="320dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/detailsimg"
                android:scaleType="centerCrop"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/detailsimg"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/blackgradient"
                android:alpha="0.8"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_star_24"
                android:text="Not avail"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:drawablePadding="5dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/detailsimg"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/score"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_access_time_filled_24"
                android:text="Not avil"
                android:drawablePadding="5dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/detailsimg"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/duration"
                />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/whitecircle"
                app:layout_constraintTop_toBottomOf="@+id/detailsimg"
                app:layout_constraintBottom_toBottomOf="@+id/detailsimg"
                app:layout_constraintLeft_toLeftOf="@+id/detailsimg"
                app:layout_constraintRight_toRightOf="@+id/detailsimg"
                android:src="@drawable/ic_baseline_play_circle_filled_24"
                android:id="@+id/playbtn"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Language Unavailable"
                app:layout_constraintTop_toBottomOf="@+id/detailsimg"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/playbtn"
                android:layout_margin="10dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:autoSizeTextType="uniform"
                android:id="@+id/language"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Network Unavailable"
                app:layout_constraintTop_toBottomOf="@+id/detailsimg"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/playbtn"
                android:layout_margin="10dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:autoSizeTextType="uniform"
                android:id="@+id/networkname"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/myyellow"
                android:text="Movie name not available"
                app:layout_constraintTop_toBottomOf="@+id/playbtn"
                android:textSize="24sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:id="@+id/detailstitle"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/detailstitle"
                android:layout_margin="10dp"
                android:text="Summary Unavailable"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="15sp"
                android:id="@+id/detailssumm"
                android:autoSizeTextType="uniform"
                android:layout_marginBottom="50dp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Go Back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="10dp"
                android:id="@+id/backbtn"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>
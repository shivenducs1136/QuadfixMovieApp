<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.HomeFragment"
        android:background="@color/mainback">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QuadFix"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/myyellow"
                android:padding="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_search_24"
                android:padding="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/home_search_btn"
                />

            <ScrollView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/home_search_btn"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:scrollbars="none"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/myyellow"
                        android:text="Action"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:id="@+id/home_action"
                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/home_action"
                        android:layout_margin="10dp"
                        android:id="@+id/action_recview"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/myyellow"
                        android:text="Drama"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/action_recview"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:id="@+id/home_drama"
                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/home_drama"
                        android:layout_margin="10dp"
                        android:id="@+id/drama_recview"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/myyellow"
                        android:text="Comedy"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/drama_recview"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:id="@+id/home_comedy"
                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/home_comedy"
                        android:layout_margin="10dp"
                        android:id="@+id/comedy_recview"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/myyellow"
                        android:text="Horror"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/comedy_recview"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:id="@+id/home_horror"
                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/home_horror"
                        android:layout_margin="10dp"
                        android:id="@+id/horror_recview"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/myyellow"
                        android:text="Thriller"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/horror_recview"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:id="@+id/home_thriller"
                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/home_thriller"
                        android:layout_margin="10dp"
                        android:id="@+id/thriller_recview"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:layout_constraintTop_toBottomOf="@+id/thriller_recview"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:indeterminate="true"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="@color/myyellow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>